<% include ../partials/header %>

<% if (page.admin){ %>
  <% include ../partials/admin_blog %>
  <link href="/stylesheets/admin.css" rel="stylesheet" />
<% } %>

<h1>Blog Index Route</h1>

<% posts.forEach( function(post){ %>
<h1><a href="/blog/<%= post._id %>"><%= post.title %></a></h1>
<p><%= post.body %></p>
<p><%= post.date %></p>

<% }); %>

<% include ../partials/footer %>